{
  "name": "google-search-cli",
  "version": "1.0.0",
  "description": "基于 Playwright 的 Google 搜索 CLI 工具",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "google-search": "./bin/google-search"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "playwright install chromium",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "ts-node src/index.ts \"playwright typescript\"",
    "test:build": "npm run build && node dist/index.js \"playwright typescript\"",
    "debug": "ts-node src/index.ts --no-headless \"playwright typescript\"",
    "debug:build": "npm run build && node dist/index.js --no-headless \"playwright typescript\"",
    "link": "npm link",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "google",
    "search",
    "cli",
    "playwright",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "playwright": "^1.50.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
